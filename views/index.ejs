<h1>Welcome to AngioBloom</h1>
<h2>The best place on the internet to share flowers...</h2>

<% flowers.forEach(function(flower){ %>
  <% var imgUrl = cloudinary.url(flower.flowerPhotos[0].picture )%>
  <% if (flower.name !== '') { %>
    <div>
      <a href="/flower/<%= flower.name %>">
        <h3><%= flower.name %></h3>
        <img src="<%= imgUrl %>" class="mainFlower">
      </a>
    </div>
  <% } %> 
<% }) %>
<button><a href="/flower">View All Flowers</a></button> 

<h2>Can you identify these flowers?</h2>

<% flowers.forEach(function(flower){ %>
  <% if (flower.name == '') { %>
    <% for(var i = 0; i < flower.flowerPhotos.length; i++) { %>
      <% var imgUrl = cloudinary.url(flower.flowerPhotos[i].picture)%>
        <div>
          <a href="/flower/unknown/<%= flower.flowerPhotos[i].id %>"><img src="<%= imgUrl %>" class="mainFlower unknownFlower"></a>
        </div>
      <% } %> 
  <% } %>
<% }) %>
